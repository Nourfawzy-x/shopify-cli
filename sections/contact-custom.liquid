{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='color-{{ section.settings.color_scheme }} gradient'>
  <div class='contact page-width section-{{ section.id }}-padding'>
    {%- if section.settings.heading != blank -%}
      <h2 class='title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'>
        {{ section.settings.heading }}
      </h2>
    {%- else -%}
      <h2 class='visually-hidden'>{{ 'templates.contact.form.title' | t }}</h2>
    {%- endif -%}

    <div class='x-grid x-grid-cols-1 md:x-grid-cols-3 x-gap-6 x-mb-[6.613vw]'>
      <div class=''>
        <div class='x-flex x-justify-between'>
          <p class='x-text-xs'>Address</p>
          <a href='{{ section.settings.map_link }}'  target="_blank" class='x-text-xs x-flex x-items-center x-gap-4'>On the map {% render 'icon-arrow' %}</a>
        </div>
        <div>
          <address class='x-text-[2.4rem] md:x-text-[4rem] x-not-italic x-leading-[115%] x-text-[#000]'>
            {{ section.settings.address }}
          </address>
        </div>
      </div>
      <div class='x-mt-[25vh] md:x-mt-0'>
        <div class='x-text-left md:x-text-center'>
          <a
            href='mailto:{{ section.settings.email }}'
            target='_blank'
            class='x-text-xs x-block'
          >
            {{- section.settings.email -}}
          </a>
          <a
            href='https://api.whatsapp.com/send?phone={{ section.settings.whatsapp | strip | replace: ' ', '' | replace: '+', '' }}'
            target='_blank'
            class='x-text-xs x-block'
          >
            Whatsapp&nbsp;
            {{- section.settings.whatsapp -}}
          </a>
        </div>
      </div>
      <div class=''>
        <div class='css-j3mfoa ev37enx1 x-text-xs x-gap-6'>
          <p>IG</p>
          <div>
            <a href='https://www.instagram.com/marmarhalim' target='_blank' class='css-mta77g ev37enx0'>
              <p style='transform: none;'>@marmarhalim</p></a
            ><a href='https://www.instagram.com/marbridal' target='_blank' class='css-mta77g ev37enx0'>
              <p style='transform: none;'>@marbridal</p>
            </a>
          </div>
          <div>
            <a href='https://www.facebook.com/MARMAR-HALIM-322579751148181' target='_blank' class='css-mta77g ev37enx0'>
              <p style='transform: none;'>Facebook</p></a
            ><a
              href='https://www.youtube.com/channel/UCCqqqbm9mMUVJai56telwSw'
              target='_blank'
              class='css-mta77g ev37enx0'
            >
              <p style='transform: none;'>YouTube</p>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div x-data='contact'>
      {%- liquid
        assign contact_form_class = 'isolate'
        if settings.animations_reveal_on_scroll
          assign contact_form_class = 'isolate scroll-trigger animate--slide-in'
        endif
      -%}
      {%- form 'contact', id: 'ContactForm', class: contact_form_class -%}
        {%- if form.posted_successfully? -%}
          <h2 class='form-status form-status-list form__message' tabindex='-1' autofocus>
            {% render 'icon-success' %}
            {{ 'templates.contact.form.post_success' | t }}
          </h2>
        {%- elsif form.errors -%}
          <div class='form__message'>
            <h2 class='form-status caption-large text-body' role='alert' tabindex='-1' autofocus>
              {% render 'icon-error' %}
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
          </div>
          <ul class='form-status-list caption-large' role='list'>
            <li>
              <a href='#ContactForm-email' class='link'>
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}
              </a>
            </li>
          </ul>
        {%- endif -%}
        <div class='field'>
          <input
            class='field__input'
            autocomplete='name'
            type='text'
            id='ContactForm-name'
            name='contact[{{ 'templates.contact.form.first_name' | t }}]'
            value='{% if form.name %}{{ form.first_name }}{% elsif customer %}{{ customer.first_name }}{% endif %}'
            placeholder='{{ 'templates.contact.form.first_name' | t }}'
            x-model='first_name'
          >
          <label class='field__label x-sr-only' for='ContactForm-name'>
            {{- 'templates.contact.form.first_name' | t -}}
          </label>
        </div>
        <div class='field'>
          <input
            class='field__input'
            autocomplete='name'
            type='text'
            id='ContactForm-name'
            name='contact[{{ 'templates.contact.form.last_name' | t }}]'
            value='{% if form.name %}{{ form.last_name }}{% elsif customer %}{{ customer.last_name }}{% endif %}'
            placeholder='{{ 'templates.contact.form.last_name' | t }}'
            x-model='last_name'
          >
          <label class='field__label x-sr-only' for='ContactForm-name'>
            {{- 'templates.contact.form.last_name' | t -}}
          </label>
        </div>
        <div class='field field--with-error'>
          <input
            autocomplete='email'
            type='email'
            id='ContactForm-email'
            class='field__input'
            name='contact[email]'
            spellcheck='false'
            autocapitalize='off'
            value='{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}'
            aria-required='true'
            {% if form.errors contains 'email' %}
              aria-invalid='true'
              aria-describedby='ContactForm-email-error'
            {% endif %}
            placeholder='{{ 'templates.contact.form.email' | t }}'
            x-model='email'
          >
          <label class='field__label x-sr-only' for='ContactForm-email'>
            {{- 'templates.contact.form.email' | t }}
            <span aria-hidden='true'>*</span></label
          >
          {%- if form.errors contains 'email' -%}
            <small class='contact__field-error' id='ContactForm-email-error'>
              <span class='visually-hidden'>{{ 'accessibility.error' | t }}</span>
              <span class='form__message'>
                {%- render 'icon-error' -%}
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </span>
            </small>
          {%- endif -%}
        </div>
        <div class='field'>
          <select
            name='contact[{{ 'templates.contact.form.theme' | t }}]'
            class='x-text-[2rem] md:x-text-[4rem] field__input'
            x-model='theme'
          >
            <option>{{- 'templates.contact.form.theme' | t -}}</option>
            <option value='Bridal appointment'>Bridal appointment</option>
            <option value='Bespoke request'>Bespoke request</option>
            <option value='Media enquiry'>Media enquiry</option>
            <option value='Wholesale'>Wholesale</option>
            <option value='General Information'>General Information</option>
          </select>
          <label class='field__label x-sr-only' for='ContactForm-name'>
            {{- 'templates.contact.form.theme' | t -}}
          </label>
        </div>
        <template x-if="theme === 'Bridal appointment' || theme === 'Bespoke request'">
          <div class='field x-hidden'>
            <input
              type='tel'
              id='ContactForm-phone'
              class='field__input'
              autocomplete='tel'
              name='contact[{{ 'templates.contact.form.when' | t }}]'
              pattern='[0-9\-]*'
              value='{% if form.when %}{{ form.when }}{% elsif customer %}{{ customer.when }}{% endif %}'
              placeholder='{{ 'templates.contact.form.when' | t }}'
              x-model='when'
            >
            <label class='field__label x-sr-only' for='ContactForm-phone'>
              {{- 'templates.contact.form.when' | t -}}
            </label>
          </div>
        </template>

        {% comment %}
          <div class='field'>
            <input
              type='tel'
              id='ContactForm-phone'
              class='field__input'
              autocomplete='tel'
              name='contact[{{ 'templates.contact.form.phone' | t }}]'
              pattern='[0-9\-]*'
              value='{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}'
              placeholder='{{ 'templates.contact.form.phone' | t }}'
            >
            <label class='field__label x-sr-only' for='ContactForm-phone'>{{ 'templates.contact.form.phone' | t }}</label>
          </div>
        {% endcomment %}
        <div class='field'>
          <textarea
            rows='10'
            id='ContactForm-body'
            class='text-area field__input'
            name='contact[{{ 'templates.contact.form.comment' | t }}]'
            placeholder='{{- 'templates.contact.form.comment' | t -}}'
            x-model='message'
          >
            {{- form.body -}}
          </textarea>
          <label class='form__label field__label x-sr-only' for='ContactForm-body'>
            {{- 'templates.contact.form.comment' | t -}}
          </label>
        </div>
        <div class='contact__button'>
          <button
            type='submit'
            class='btn'
            :class="{ 'x-group': !isActive(theme, first_name, last_name, when, message) }"
            :disabled='!isActive(theme, first_name, last_name, when, message)'
          >
            <span class='x-visible group-hover:x-hidden'>{{ 'templates.contact.form.send' | t }}</span>
            <span class='x-hidden group-hover:x-inline'>Plese fill up the form</span>
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('contact', () => ({
      theme: '',
      first_name: '',
      last_name: '',
      email: '',
      when: '',
      message: '',
      init() {
        {% comment %} this.$watch('theme', this.isActive);
        this.$watch('first_name', this.isActive);
        this.$watch('last_name', this.isActive);
        this.$watch('email', this.isActive);
        this.$watch('when', this.isActive);
        this.$watch('message', this.isActive); {% endcomment %}
      },
      isActive(...values) {
        const whenActive = this.theme === 'Bridal appointment' || this.theme === 'Bespoke request';
        if (whenActive) {
          return this.theme && this.first_name && this.last_name && this.email && this.when;
        } else {
          return this.theme && this.first_name && this.last_name && this.email;
        }
      },
    }));
  });
</script>

